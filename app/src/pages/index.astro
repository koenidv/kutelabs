    <h1>kutelabs. a kute way to learn kotlin :)</h1>
    <a href="/learn" data-astro-prefetch>
      <ElevatedBox elevation={2} hoverable class="bg-beige-50">
        <p class="p-4">Go to available lessons</p>
      </ElevatedBox>
    </a>
  </div>
</InnerLayout>

