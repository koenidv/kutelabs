---
interface Props {
  elevation?: number
  hoverable?: boolean
  label?: string
  class?: string
  style?: string
}
const { elevation = 4, hoverable = false, label, class: className, style } = Astro.props
---

<div
  class:list={[
    "group elevated-card",
    `elevated-${elevation}`,
    { "hoverable hover:cursor-pointer": hoverable },
    className,
  ]}
  style={style}
  tabindex="${hoverable ? 0 : -1}"
  aria-label={label}>
  <div class:list={["h-full w-full border-l-4 border-t-4 border-r-2 border-b-2 border-black"]}>
    <slot />
  </div>
</div>
