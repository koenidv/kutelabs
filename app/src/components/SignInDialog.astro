---
import { SignedOut, SignInButton } from "@clerk/astro/components"
interface Props {
  executionLanguage: "js" | "kt" | "unset"
}
const { executionLanguage } = Astro.props
---

{
  executionLanguage !== "js" ? (
    <SignedOut isStatic={true}>
      <div class="fixed top-0 left-0 z-40 w-screen h-screen pointer-events-auto bg-beige-800 bg-opacity-50 flex items-center justify-center dialog-container">
        <div
          id="testing"
          class="w-[90vw] lg:w-[60vw] h-[70vh] lg:h-[60vh] rounded-3xl flex flex-col items-center justify-center gap-8 bg-beige-50">
          <SignInButton mode="modal" >
            <p class="relative animate-bg-up border-2 border-transparent border-beige-500 hover:border-black box-border px-8 py-4 transition-colors">
              Please sign in to continue
            </p>
          </SignInButton>
          <a href="/learn">
            Back to Lessons
          </a>
        </div>
      </div>
    </SignedOut>
  ) : undefined
}
