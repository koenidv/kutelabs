---
import BackButton from "../components/BackButton.astro"
import Logo from "../svg/logo.svg"
import OuterLayout from "./OuterLayout.astro"

interface Props {
  title: string
  navigateBackText?: string
  navigateBackDefaultUrl?: string
}
const { title, navigateBackText } = Astro.props
---

<OuterLayout title={title}>
  <header class="flex items-center">
    <nav class="w-full">
      <div
        class=`flex flex-row-reverse lg:flex-row ${navigateBackText ? "justify-between": "justify-center"} lg:justify-start items-center px-4 lg:px-8 py-8 w-full max-w-7xl lg:gap-4 h-24`>
        <a href="/learn">
          <Logo class="h-8 w- inline" />
        </a>
        {
          navigateBackText && (
            <BackButton navigateBackDefaultUrl="/learn">
              <p class="relative animate-bg-up border-2 border-transparent hover:border-black box-border px-2 lg:px-4 py-2 transition-colors">
                ‚Üê {navigateBackText}
              </p>
            </BackButton>
          )
        }
      </div>
    </nav>
  </header>
  <main>
    <slot />
  </main>
</OuterLayout>
