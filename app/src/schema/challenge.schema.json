{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/koenidv/kutelabs/refs/heads/main/app/src/content/challenges/challenge.schema.json",
  "title": "Challenge",
  "description": "A challenge along the kutelabs learning journey",
  "type": "object",
  "$defs": {
    "image": {
      "type": "object",
      "properties": {
        "src": {
          "type": "string",
          "description": "The URL of the image"
        },
        "alt": {
          "type": "string",
          "description": "The alt text of the image"
        }
      },
      "required": [
        "src",
        "alt"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "section": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the section"
        },
        "description": {
          "type": "string",
          "description": "The description of the section"
        },
        "hideSectionHead": {
          "type": "boolean",
          "description": "Hide the section head"
        }
      },
      "required": [
        "title"
      ],
      "additionalProperties": false
    },
    "story": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the story"
        },
        "description": {
          "type": "string",
          "description": "The description of the story"
        },
        "published": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the story was published. When unset or in the future, the story is not published"
        },
        "color": {
          "type": "string",
          "description": "Hex color for the story box"
        },
        "imageStart": {
          "$ref": "#/$defs/image"
        },
        "imageEnd": {
          "$ref": "#/$defs/image"
        }
      },
      "required": [
        "title",
        "published"
      ],
      "additionalProperties": false
    },
    "editor": {
      "anyOf": [
        {
          "description": "Use and configure the mixed content editor",
          "$ref": "../../../editor-mixed/src/schema/editor.schema.json"
        },
        {
          "description": "Use and configure the text editor",
          "$ref": "./editor-text.schema.json"
        }
      ]
    }
  },
  "required": [
    "section",
    "story",
    "editor"
  ]
}